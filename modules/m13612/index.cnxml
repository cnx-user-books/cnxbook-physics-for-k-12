<m:mn> 0 </m:mn>
</m:mtd>
</m:mtr>

<m:mtr> 
<m:mtd>
<m:mo> ⇒ </m:mo> 
<m:mn> 2 </m:mn>
<m:mi> t </m:mi>
<m:mo> ( </m:mo>
<m:mi> t </m:mi>
<m:mo> - </m:mo>
<m:mn> 1 </m:mn>
