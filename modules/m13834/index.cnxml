</m:msub>
<m:mo> = </m:mo>
<m:mfrac>
<m:mi> Displacement  </m:mi>
<m:mi> Time  </m:mi>
</m:mfrac>
<m:mo> = </m:mo>
<m:mfrac>
<m:mn> 4 </m:mn>
<m:mn> 4 </m:mn>
</m:mfrac>
