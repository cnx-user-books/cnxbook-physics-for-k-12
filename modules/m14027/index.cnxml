<m:mi> ω </m:mi>
<m:mo> x </m:mo>
<m:mn> 2 </m:mn>
<m:mo> = </m:mo>
<m:mi> v </m:mi>
<m:mspace width="2pt"/>
<m:mi> ( given) </m:mi>
</m:mtd>
</m:mtr>
<m:mtr>
<m:mtd>
<m:msub>
<m:mi> v </m:mi>
<m:mn> 2 </m:mn>
</m:msub>
