<m:mn> 1 </m:mn>
<m:mo> = </m:mo>
<m:mi> ω </m:mi>
</m:mtd>
</m:mtr>
<m:mtr>
<m:mtd>
<m:mo> ⇒ </m:mo> 
<m:msub>
<m:mi> v </m:mi>
<m:mn> 2 </m:mn>
</m:msub>
<m:mo> = </m:mo>
<m:mfrac>
<m:mi> v </m:mi>
<m:mn> 2 </m:mn>
</m:mfrac>
</m:mtd>
</m:mtr>
