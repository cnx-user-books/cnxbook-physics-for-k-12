  </m:mrow>
</m:math>

</para>
<para id="element-258">
<m:math display="block">
  <m:mrow>
      <m:mi>(d) </m:mi>
<m:mspace width="2pt"/>

    <m:mn>2</m:mn>
    <m:msub>
      <m:mi>a</m:mi>
      <m:mi>A</m:mi>
    </m:msub>
    <m:mo>+</m:mo>
    <m:msub>
      <m:mi>a</m:mi>
      <m:mi>B</m:mi>
    </m:msub>
    <m:mo>+</m:mo>
    <m:msub>
      <m:mi>a</m:mi>
      <m:mi>C</m:mi>
