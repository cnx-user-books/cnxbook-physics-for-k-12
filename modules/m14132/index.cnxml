<m:mn> 1 </m:mn>
</m:msub>
<m:msub>
<m:mi mathvariant="bold"> v </m:mi>
<m:mn> 1 </m:mn>
</m:msub>
<m:mo> + </m:mo> 
<m:msub>
<m:mi> m </m:mi>
<m:mn> 2 </m:mn>
</m:msub>
<m:msub>
<m:mi mathvariant="bold"> v </m:mi>
<m:mn> 2 </m:mn>
</m:msub>
<m:mo> + </m:mo> 
<m:mo> ................ </m:mo> 
<m:mo> + </m:mo> 
<m:msub>
<m:mi> m </m:mi>
<m:mn> n </m:mn>
</m:msub>
<m:msub>
<m:mi mathvariant="bold"> v </m:mi>
