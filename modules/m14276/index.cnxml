<m:mi> 2i </m:mi>
</m:msub>
<m:mo> + </m:mo> 
<m:msub>
<m:mi> v </m:mi>
<m:mi> 2f </m:mi>
</m:msub>
</m:mtd>
</m:mtr>
<m:mtr>
<m:mtd>
<m:msub>
