</m:mfrac>
<m:mo> = </m:mo> 
<m:mn> 60 </m:mn>
<m:mo> x </m:mo> 
<m:mn> 10 </m:mn>
<m:mo> x </m:mo> 
<m:mfrac>
<m:mn> 200 </m:mn>
<m:mn> 2 </m:mn>
</m:mfrac>
<m:mo> = </m:mo> 
<m:mn> 60000 </m:mn>
<m:mspace width="2pt"/>
