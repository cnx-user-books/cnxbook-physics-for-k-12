<m:msup>
<m:mi> T </m:mi>
<m:mrow>
<m:mn> - </m:mn>
<m:mn> 1 </m:mn>
</m:mrow>
</m:msup>
<m:mo> ] </m:mo> 
<m:mo> [ </m:mo> 
<m:mi> L </m:mi>
<m:mo> ] </m:mo> 
<m:mo> = </m:mo> 
<m:mo> [ </m:mo> 
<m:mi> M </m:mi>
<m:msup>
<m:mi> L </m:mi>
<m:mn> 2 </m:mn>
</m:msup>
<m:msup>
<m:mi> T </m:mi>
