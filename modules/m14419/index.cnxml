<m:mrow>
<m:mo> ( </m:mo> 
<m:mfrac>
<m:mrow>
<m:mn> 2 </m:mn>
<m:mi> M </m:mi>
</m:mrow>
<m:mn> 3 </m:mn>
</m:mfrac>
<m:mo> ) </m:mo> 
<m:msup>
<m:mrow>
<m:mo> ( </m:mo> 
<m:mn> 2 </m:mn>
<m:mi> x </m:mi>
<m:mo> ) </m:mo> 
</m:mrow>
<m:mn> 2 </m:mn>
</m:msup>
</m:mrow>
<m:mrow>
<m:mn> 3 </m:mn>
</m:mrow>
</m:mfrac>
<m:mo> = </m:mo> 
<m:mfrac>
<m:mrow>
<m:mn> 8 </m:mn>
<m:mi> M </m:mi>
<m:msup>
<m:mi> x </m:mi>
