<m:mi> L </m:mi>
<m:mi> OL </m:mi>
</m:msub>
<m:mo> + </m:mo> 
<m:msub>
<m:mi> L </m:mi>
<m:mi> OR </m:mi>
</m:msub>
</m:mtd>
</m:mtr>
<m:mtr>
<m:mtd>
<m:mo> ⇒ </m:mo> 
<m:mi> L </m:mi>
<m:mo> = </m:mo> 
<m:mfrac>
<m:mrow>
<m:mi> M </m:mi>
<m:msup>
<m:mi> x </m:mi>
<m:mn> 2 </m:mn>
