  <m:mn> 90 </m:mn>
  <m:mo> ° </m:mo>
  <m:mo> - </m:mo>
  <m:mi> θ </m:mi>
  <m:mo> ) </m:mo>
  <m:mo> = </m:mo>
  <m:mi> cot </m:mi>
  <m:mi> θ </m:mi>
