<m:mfrac>
<m:mrow>
  <m:mi> a </m:mi>
  <m:mi> cos </m:mi>
  <m:mi> θ </m:mi>
</m:mrow>
<m:mrow>
  <m:mi> a </m:mi>
  <m:mi> sin </m:mi>
  <m:mi> θ </m:mi>
