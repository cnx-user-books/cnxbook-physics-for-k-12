<m:mi> sin </m:mi>
<m:msub>
<m:mi> θ </m:mi>
<m:mn> 2 </m:mn>
</m:msub>
<m:msub>
<m:mi mathvariant="bold"> n </m:mi>
<m:mn> 2 </m:mn>
</m:msub>

</m:mtd>
</m:mtr>
<m:mtr>
<m:mtd>
<m:mo> ⇒ </m:mo> 
<m:mi> B </m:mi>
<m:mi> sin </m:mi>
