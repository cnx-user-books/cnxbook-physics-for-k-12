</m:math>
<m:math display="block">
  <m:mrow>
    <m:mo>∫</m:mo>
    <m:msup>
      <m:mi>e</m:mi>
      <m:mi>x</m:mi>
    </m:msup>
    <m:mi>đ</m:mi>
    <m:mi>x</m:mi>
    <m:mo>=</m:mo>
    <m:msup>
      <m:mi>e</m:mi>
      <m:mi>x</m:mi>
    </m:msup>
    <m:mo>;</m:mo>
    <m:mspace width="1em"/>
    <m:mspace width="1em"/>
    <m:mo>∫</m:mo>
    <m:mfrac>
