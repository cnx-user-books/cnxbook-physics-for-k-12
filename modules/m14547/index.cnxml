    <m:mfrac>
      <m:mrow>
        <m:msup>
          <m:mi>v</m:mi>
          <m:mn>2</m:mn>
        </m:msup>
      </m:mrow>
      <m:mn>2</m:mn>
    </m:mfrac>
    <m:munderover>
      <m:mo>]</m:mo>
      <m:mrow>
        <m:mn>0</m:mn>
      </m:mrow>
      <m:mi>v</m:mi>
    </m:munderover>
    <m:mo>=</m:mo>
    <m:mn>9</m:mn>
    <m:mo>[</m:mo>
    <m:mfrac>
      <m:mrow>
        <m:msup>
