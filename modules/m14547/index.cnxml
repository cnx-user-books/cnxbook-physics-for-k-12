<section id="section-1b">
<title> Integration
</title>

<para id="element-10"><m:math display="block">
  <m:mrow>
    <m:mo>∫</m:mo>
    <m:msup>
      <m:mi>x</m:mi>
      <m:mi>n</m:mi>
    </m:msup>
    <m:mi>đ</m:mi>
    <m:mi>x</m:mi>
    <m:mo>=</m:mo>
    <m:mfrac>
      <m:msup>
        <m:mi>x</m:mi>
        <m:mrow>
          <m:mi>n</m:mi>
          <m:mo>+</m:mo>
          <m:mn>1</m:mn>
        </m:mrow>
      </m:msup>
      <m:mrow>
        <m:mi>n</m:mi>
        <m:mo>+</m:mo>
        <m:mn>1</m:mn>
      </m:mrow>
    </m:mfrac>
    <m:mo>;</m:mo>
    <m:mspace width="1em"/>
    <m:mspace width="1em"/>
    <m:mo>∫</m:mo>
    <m:msup>
      <m:mfenced>
        <m:mrow>
          <m:mi>a</m:mi>
          <m:mi>x</m:mi>
          <m:mo>+</m:mo>
          <m:mi>b</m:mi>
        </m:mrow>
      </m:mfenced>
      <m:mi>n</m:mi>
    </m:msup>
    <m:mi>đ</m:mi>
    <m:mi>x</m:mi>
    <m:mo>=</m:mo>
    <m:mfrac>
      <m:msup>
        <m:mfenced>
          <m:mrow>
            <m:mi>a</m:mi>
            <m:mi>x</m:mi>
            <m:mo>+</m:mo>
            <m:mi>b</m:mi>
          </m:mrow>
        </m:mfenced>
        <m:mrow>
          <m:mi>n</m:mi>
          <m:mo>+</m:mo>
          <m:mn>1</m:mn>
        </m:mrow>
      </m:msup>
      <m:mrow>
        <m:mi>a</m:mi>
        <m:mfenced>
          <m:mrow>
            <m:mi>n</m:mi>
            <m:mo>+</m:mo>
            <m:mn>1</m:mn>
          </m:mrow>
        </m:mfenced>
      </m:mrow>
    </m:mfrac>
  </m:mrow>
</m:math>
<m:math display="block">
  <m:mrow>
    <m:mo>∫</m:mo>
    <m:mi>sin</m:mi>
    <m:mi>a</m:mi>
    <m:mi>x</m:mi>
    <m:mi>đ</m:mi>
    <m:mi>x</m:mi>
    <m:mo>=</m:mo>
    <m:mo>-</m:mo>
    <m:mfrac>
      <m:mrow>
        <m:mi>cos</m:mi>
        <m:mi>a</m:mi>
        <m:mi>x</m:mi>
      </m:mrow>
      <m:mi>a</m:mi>
    </m:mfrac>
    <m:mo>;</m:mo>
    <m:mspace width="1em"/>
    <m:mspace width="1em"/>
    <m:mo>∫</m:mo>
    <m:mi>cos</m:mi>
    <m:mi>a</m:mi>
    <m:mi>x</m:mi>
    <m:mi>đ</m:mi>
    <m:mi>x</m:mi>
    <m:mo>=</m:mo>
    <m:mfrac>
      <m:mrow>
        <m:mi>sin</m:mi>
        <m:mi>a</m:mi>
        <m:mi>x</m:mi>
      </m:mrow>
