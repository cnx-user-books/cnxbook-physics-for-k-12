    </m:mfrac>
    <m:munderover>
      <m:mo>]</m:mo>
      <m:mrow>
        <m:mn>2</m:mn>
      </m:mrow>
      <m:mi>x</m:mi>
    </m:munderover>
  </m:mrow>
</m:math>
<m:math display="block">
  <m:mrow>
    <m:mo>⇒</m:mo>
