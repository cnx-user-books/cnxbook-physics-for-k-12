<m:mo> - </m:mo> 
<m:mi> a </m:mi>
<m:mo> ) </m:mo> 
<m:mo> = </m:mo> 
<m:mo> { </m:mo> 
<m:mfrac>
<m:mrow>
<m:mn> 1 </m:mn>
</m:mrow>
<m:mrow>
<m:mo> ( </m:mo> 
<m:mn> 1 </m:mn>
<m:mo> - </m:mo> 
<m:mi> a </m:mi>
<m:mo> ) </m:mo> 
</m:mrow>
</m:mfrac>
<m:mo> - </m:mo> 
<m:mn> 4 </m:mn>
<m:mi> a </m:mi>
<m:mo> } </m:mo> 
</m:mtd>
</m:mtr>
</m:mtable>
</m:math>
</para>
<para id="element-132">
<m:math display="block">
<m:mtable columnalign="left">
<m:mtr>
<m:mtd>
<m:mo> ⇒ </m:mo> 
