			<m:msup>
				<m:mn>10</m:mn>
				<m:mrow>
					<m:mo>-</m:mo>
					<m:mn>4</m:mn>
				</m:mrow>
			</m:msup>
		</m:mrow>
	</m:math>
 m i.e
<m:math>
		<m:mrow>
			<m:msup>
				<m:mn>10</m:mn>
				<m:mrow>
