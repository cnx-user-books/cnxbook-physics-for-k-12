        <m:mo>]</m:mo>
        <m:mo>[</m:mo>
        <m:msup>
          <m:mn>10</m:mn>
          <m:mn>3</m:mn>
        </m:msup>
        <m:mi>N</m:mi>
        <m:mo>]</m:mo>
      </m:mrow>
    </m:mfrac>
    <m:mo>=</m:mo>
    <m:msup>
