        </m:msup>
        <m:mi>W</m:mi>
        <m:mo>]</m:mo>
        <m:mo>[</m:mo>


        <m:mi>s</m:mi>
        <m:mo>]</m:mo>
        <m:mo>[</m:mo>
        <m:mn>1</m:mn>
        <m:mi>N</m:mi>
        <m:mo>]</m:mo>
      </m:mrow>
      <m:mrow>
        <m:mo>[</m:mo>
        <m:mn>1</m:mn>
        <m:mi>W</m:mi>
        <m:mo>]</m:mo>
        <m:mo>[</m:mo>
        <m:mn>1</m:mn>

