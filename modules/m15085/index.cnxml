</m:math>
</para>
<para id="element-30"><m:math display="block">
  <m:mrow>
    <m:msub>
<m:mi mathvariant="bold"> F </m:mi>
      <m:mrow>
        <m:mn>21</m:mn>
      </m:mrow>
    </m:msub>
    <m:mo>=</m:mo>
    <m:mo>-</m:mo>
    <m:mfrac>
      <m:mrow>
        <m:mi>G</m:mi>
        <m:msub>
          <m:mi>m</m:mi>
          <m:mn>1</m:mn>
        </m:msub>
        <m:msub>
          <m:mi>m</m:mi>
