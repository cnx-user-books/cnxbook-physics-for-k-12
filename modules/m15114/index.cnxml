        <m:mi>M</m:mi>
        <m:mi>m</m:mi>
      </m:mrow>
      <m:mi>r</m:mi>
    </m:mfrac>
  </m:mrow>
</m:math>
</para>
<para id="element-54"><m:math display="block">
  <m:mrow>
